{
  "author": "Ebod Shojaei",
  "name": "three-firebase-esbuild",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "prebuild": "node -e \"const fs = require('fs'); ['dist', 'dist/min'].forEach(dir => { if (!fs.existsSync(dir)){ fs.mkdirSync(dir, { recursive: true }); }});\"",
    "build": "esbuild src/bundle/main.js --bundle --outfile=dist/bundle.js --minify && terser dist/bundle.js --compress --mangle --output dist/min/bundle.min.js",
    "start": "node index.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "esbuild": "0.18.10",
    "express": "^4.18.2",
    "firebase": "^9.23.0",
    "firebase-admin": "^11.9.0",
    "fs": "^0.0.1-security",
    "module-alias": "^2.2.3",
    "router": "^1.3.8",
    "stream": "^0.0.2",
    "three": "^0.153.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "terser": "^5.18.2"
  },
  "_moduleAliases": {
    "@component": "src/model",
    "@config": "src/config",
    "@js": "src/js",
    "@routes": "src/routes"
  }
}